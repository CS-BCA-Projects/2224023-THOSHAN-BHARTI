<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Healing with Music</title>
    <link rel="stylesheet" href="style.css">
    <style>
        btn {
            display: inline-block;
            padding: 10px 20px;
            background: #5c67f2;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Admin Dashboard</h1>
            <nav>
                <ul class="nav-links">
                    <li><a href="index">Home</a></li>
                    <li><a href="playlist">Playlists</a></li>
                    <li><a href="create">Create</a></li>
                    <li><a href="login">Login</a></li>
                    <li><a href="admin">Admin</a></li>
                </ul>
            </nav>
        </header>
       
        <div class="menu-toggle">&#9776;</div>
       
        
        <!-- Add Sound Section -->
        <section id="add-sound">
            <h2>Add New Sound</h2>
            <form id="add-sound-form">
                <label for="sound-title">Sound Title:</label>
                <input type="text" id="sound-title" required>

                <label for="sound-file">Sound File (URL or Local Path):</label>
                <input type="text" id="sound-file" required>

                <button type="submit">Add Sound</button>
            </form>

            <div id="sounds-list">
                <h3>Available Sounds</h3>
                <ul id="sound-list"></ul>
            </div>
        </section>

        <!-- Manage Users Section -->
        <section id="manage-users">
            <h2>Manage Users</h2>
            <form id="register-user-form">
                <label for="username">Username:</label>
                <input type="text" id="username" required>

                <label for="email">Email:</label>
                <input type="email" id="email" required>

                <label for="password">Password:</label>
                <input type="password" id="password" required>

                <button type="submit">Register User</button>
            </form>

            <div id="user-list">
                <h3>Registered Users</h3>
                <ul id="users"></ul>
            </div>
        </section>
    </div>

    <script src="script.js"></script>
</body>
</html>
